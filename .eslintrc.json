{
  "env": {
      "browser": true,
      "jasmine": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 5
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "comma-dangle": [
          "error",
          "never"
      ]
  },
  "globals": {
    "require": true,
    "module": true,
    "assert": true
  }
}
